<?xml version="1.0" encoding="utf-8"?>
<com.emilsjolander.components.StickyScrollViewItems.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_item_background"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/frag_pin_details_fl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ViewFlipper
                android:id="@+id/frag_pin_details_vf_image_map_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/images1" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/images3" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/images1" />
            </ViewFlipper>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/activated_listitem_color"
                    android:text="Jal Mahal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/pin_detail_image_size1"
                        android:layout_height="@dimen/pin_detail_image_size1"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:text="Food" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/pin_detail_image_size"
                        android:layout_height="@dimen/pin_detail_image_size"
                        android:background="@drawable/circle_shape_checked"
                        android:padding="10dip"
                        android:src="@drawable/like" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dip"
                        android:gravity="center"
                        android:text="20 Liked"
                        android:textSize="@dimen/small_text_size_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/pin_detail_image_size"
                        android:layout_height="@dimen/pin_detail_image_size"
                        android:background="@drawable/circle_shape_unchecked"
                        android:padding="10dip"
                        android:src="@drawable/review" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dip"
                        android:gravity="center"
                        android:text="25 reviews"
                        android:textSize="@dimen/small_text_size_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/pin_detail_image_size"
                        android:layout_height="@dimen/pin_detail_image_size"
                        android:background="@drawable/circle_shape_unchecked"
                        android:padding="10dip"
                        android:src="@drawable/been_here" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dip"
                        android:gravity="center"
                        android:text="Been Here"
                        android:textSize="@dimen/small_text_size_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/pin_detail_image_size"
                        android:layout_height="@dimen/pin_detail_image_size"
                        android:background="@drawable/circle_shape_unchecked"
                        android:padding="10dip"
                        android:src="@drawable/rate" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dip"
                        android:gravity="center"
                        android:text="4.5 Rating"
                        android:textSize="@dimen/small_text_size_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/pin_detail_image_size"
                        android:layout_height="@dimen/pin_detail_image_size"
                        android:background="@drawable/circle_shape_unchecked"
                        android:padding="10dip"
                        android:src="@drawable/share" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dip"
                        android:gravity="center"
                        android:text="20 shared"
                        android:textSize="@dimen/small_text_size_1" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.aman.utils.CircularImageView
                    android:id="@+id/circularImageView1"
                    android:layout_width="@dimen/pin_detail_image_size"
                    android:layout_height="@dimen/pin_detail_image_size"
                    android:scaleType="centerInside"
                    android:src="@drawable/download" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aman Singhal"
                        android:textColor="@color/activated_listitem_color"
                        android:textSize="@dimen/small_text_size_1" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="4"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry&apos;s standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was "
                        android:textSize="@dimen/small_text_size_1" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:maxLines="5"
                        android:text="more..."
                        android:textSize="@dimen/small_text_size_1"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/pin_detail_image_size2"
                        android:layout_height="@dimen/pin_detail_image_size2"
                        android:background="@drawable/circle_shape_checked"
                        android:padding="8dip"
                        android:src="@drawable/heart" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Following"
                        android:textSize="@dimen/small_text_size_1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"            
            android:layout_weight="1"
            android:background="#fff" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/staticmap" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/pin_detail_image_size"
                    android:layout_height="@dimen/pin_detail_image_size"
                    android:background="@drawable/circle_shape_checked"
                    android:src="@android:drawable/ic_menu_directions" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3-Km"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</com.emilsjolander.components.StickyScrollViewItems.StickyScrollView>