<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_item_background"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ViewFlipper
            android:id="@+id/frag_pin_details_vf_image_map_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/images1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/images3" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/images1" />
        </ViewFlipper>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jal Mahal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/pin_detail_image_size1"
                    android:layout_height="@dimen/pin_detail_image_size1"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:text="Food" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/pin_detail_image_size"
                    android:layout_height="@dimen/pin_detail_image_size"
                    android:background="@drawable/circle_shape_checked"
                    android:padding="10dip"
                    android:src="@drawable/like" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dip"
                    android:gravity="center"
                    android:text="20 Liked"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/pin_detail_image_size"
                    android:layout_height="@dimen/pin_detail_image_size"
                    android:background="@drawable/circle_shape_unchecked"
                    android:padding="10dip"
                    android:src="@drawable/review" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dip"
                    android:gravity="center"
                    android:text="25 reviews"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/pin_detail_image_size"
                    android:layout_height="@dimen/pin_detail_image_size"
                    android:background="@drawable/circle_shape_unchecked"
                    android:padding="10dip"
                    android:src="@drawable/been_here" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dip"
                    android:gravity="center"
                    android:text="Been Here"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/pin_detail_image_size"
                    android:layout_height="@dimen/pin_detail_image_size"
                    android:background="@drawable/circle_shape_unchecked"
                    android:padding="10dip"
                    android:src="@drawable/rate" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dip"
                    android:gravity="center"
                    android:text="4.5 Rating"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/pin_detail_image_size"
                    android:layout_height="@dimen/pin_detail_image_size"
                    android:background="@drawable/circle_shape_unchecked"
                    android:padding="10dip"
                    android:src="@drawable/share" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dip"
                    android:gravity="center"
                    android:text="20 shared"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"        
        android:layout_margin="5dip"
        android:background="#fff">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/staticmap" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/pin_detail_image_size"
                android:layout_height="@dimen/pin_detail_image_size"
                android:background="@drawable/circle_shape_checked"
                android:src="@android:drawable/ic_menu_directions" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3-Km"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pinned By"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/activated_listitem_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.aman.utils.CircularImageView
                android:id="@+id/circularImageView1"
                android:layout_width="@dimen/pin_detail_image_size"
                android:layout_height="@dimen/pin_detail_image_size"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aman Singhal"
                    android:textSize="@dimen/small_text_size_1" />
            </LinearLayout>
            
             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
                <ImageView 
                    android:layout_width="@dimen/pin_detail_image_size2"
                    android:layout_height="@dimen/pin_detail_image_size2"
                    android:background="@drawable/circle_shape_checked"
                    android:padding="8dip"
                    android:src="@drawable/heart"/>
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following"
                    android:textSize="@dimen/small_text_size_1" />
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>